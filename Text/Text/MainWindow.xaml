<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor de Texto" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <MenuItem Header="Archivo">
                <MenuItem Header="Nuevo" Click="Nuevo_Click"/>
                <MenuItem Header="Abrir..." Click="Abrir_Click"/>
                <MenuItem Header="Guardar" Click="Guardar_Click"/>
            </MenuItem>
        </Menu>
        <TextBox Name="textBox" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" Margin="10,30,10,10"/>
    </Grid>
</Window>